{% extends 'admin/admin_base.html.twig' %}

{% block title %}Жанры{% endblock %}

{% block body %}
    <h1>Жанры</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Добавлен</th>
            <th>Изменён</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.name }}</td>
                <td>{{ genre.description|u.truncate(40) }}</td>
                <td>{{ genre.createdAt|date('Y-m-d H:i') }}</td>
                <td>{{ genre.updatedAt ? genre.updatedAt|date('Y-m-d H:i') : '-' }}</td>
                <td>
                    <a href="{{ path('admin_genre_show', {'id': genre.id}) }}" class="btn btn-sm btn-outline-success">
                        Смотреть
                    </a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="7">Нет жанров</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
